@Autowired
PlatformTransactionManager txManagerA;

@Autowired
PlatformTransactionManager txManagerB;

public void saveWithManualTx() {
    TransactionStatus txA = txManagerA.getTransaction(new DefaultTransactionDefinition());
    TransactionStatus txB = txManagerB.getTransaction(new DefaultTransactionDefinition());

    try {
        repoA.save(...);
        repoB.save(...);

        txManagerA.commit(txA);
        txManagerB.commit(txB);
    } catch (Exception ex) {
        txManagerA.rollback(txA);
        txManagerB.rollback(txB);
        throw ex;
    }
}
